{
  "$id": "https://schema.steadybit.io/discovery-kit/discoverResponse",
  "title": "Discovery Response",
  "description": "The results of a discovery call",
  "type": "object",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "targets": {
          "type": "array",
          "description": "A list of discovered targets.",
          "items": {
            "type": "object",
            "description": "A single discovered target.",
            "properties": {
              "id": {
                "type": "string",
                "description": "The id of the target, needs to be unique per agent and target type."
              },
              "label": {
                "type": "string",
                "description": "A label, which will be used by the platform to display the target"
              },
              "targetType": {
                "type": "string",
                "description": "The type of the target. Will be used to find matching attacks and find the right ui configuration to show and select the targets."
              },
              "attributes": {
                "type": "object",
                "description": "These attributes include detailed information about the target provided through the discovery.",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "id",
              "targetType",
              "attributes"
            ]
          }
        }
      },
      "required": [
        "targets"
      ]
    },
    {
      "$ref": "errorResponse"
    }
  ]
}